	date sd,ed;
	boolean TrHs,testf,foundf;
	integer i,mtrw;
	record CLCorspVc CLCor;
	string 200 paymodes,location;
	record PMBlock PMb;
	row PMBlock PMrw;
	integer pmmtrw,j;
	string 200 tstr;
	
	blockload(PMb);
	pmmtrw = matrowcnt(PMb);
	location = RepSpec.f1;
	switch(location)begin
		case"CARTIER":		paymodes = "B1,K1,L1,T1,S1";
