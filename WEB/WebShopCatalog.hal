e);			end;			BlockStore(WSB);		end;	end;		ResetCompany(oldcompany);	if (sendf==1) then begin		//WebOutString(GetStringFromArea(ames,0,GetAreaLength(ames)));		WebSetContentType("application/binary");		WebOutArea(ames);		res = true;	end;	LWebSendTypes:;	HandleWebSendTypes = res;return;end;global webpublic updating Procedure WebSendTypesCatalog() //Edit***************************Sasha2,15:18 04.07.2014begin  integer client;  	client = 1;  	  	if (HandleWebSendTypes(client)) then begin  		logText(0,"Types are sent");  	end;return;end;global webpublic updating Procedure WebSendTypesMobile() //Edit***************************Sasha2,15:18 04.07.2014begin  integer client;  	client = 2;  	  	if (HandleWebSendTypes(client)) then begin  		logText(0,"Types are sent");  	end;return;end;