ateStr & storeID & itemcode;					qty = AbsoluteVal(IVrw.Quant); //cut decimals;					quant = "+" & Right("000000" & qty,6);						price = AbsoluteVal(IVrw.Price * IVrw.Quant * 100);					pricevalue = 	"+" & Right("0000000000" & price,10);					discount = price - AbsoluteVal(IVrw.Sum)*100;					discountvalue = "+" & Right("00000000" & discount,8);					discountCode = "  "; //two spaces					if (nonblank(IVrw.vRebate)) then begin discountCode = "93"; end;					transNr = IVr.SerNr;					rowdata = rowdata & quant & Left(IVr.CurncyCode,3) & pricevalue & discountCode & discountvalue;					rowdata = rowdata & operatorID & terminalID & Right(transNr,4) & typeOfRegistration;					AddTextToArea(rowdata & nextline, ames);					count = count + 1;				end;				end;  			end;	end;		//Trailer record	countStr = Right("0000000" & count,7);	AddTextToArea("**FINE**" & vendtran & transdateStr & storeID & countStr, ames);	WriteAreaToFile(ames,filename,0);			//createfile("sss.txt");	//openexportfile("sss.txt",false);		//startformat(15);	//	outstring(0,0,vendtran & transdateStr,false);	//EndFormat;	//CloseFile;  return;end;*/global procedure GruppoCoinManualMn(record RcVc RepSpec) //Edit***************************Sasha2,12:11 29.06.2016begin  /*if (RepSpec.flags[1]==1) then begin    GruppoCoinSalesMn(RepSpec);  end;  millisleep(200);  if (RepSpec.flags[2]==1) then begin    StocKCountGCMn(RepSpec);  end;*/    CreateFile("out1/HansaTest.txt");	CloseFile;  return;end;procedure SetHeaderCoinPackList(var record CoinPackListVc CoinPackListr,string storeID,string storeID2,string transpBill,                                string transpBillDate,string deliverer,string recipient,string importer,                                string oviVATNum,string goodsCollAddr)begin      CoinPackListr.StoreID = storeID;    CoinPackListr.StoreID2 = storeID2;    CoinPackListr.TransportBill = transpBill;    CoinPackListr.TransportBillDate = transpBillDate;    CoinPackListr.Deliverer = deliverer;    CoinPackListr.Recipient = recipient;    CoinPackListr.Importer = importer;    CoinPackListr.OviesseVATnum = oviVATNum;    CoinPackListr.GoodsCollAddress = goodsCollAddr;      return;end;global //Edit***************************Sasha2,16:31 01.07.2016 {updating procedure GruppoCoinParsePackList(string path,string filename) begin  record CoinPackListVc CoinPackListr;  area adata,acarriage;  string 5 nextline;  string 15 storeID,storeID2,transpBill,transpBillDate;  string 100 deliverer,recipient,importer,oviVATNum,goodsCollAddr;  LongInt i,arlen;  boolean headerf;        nextline = chr(13) & chr(10);        AddFileToArea(path & filename,adata,false);    arlen = GetAreaLength(adata);    if (arlen>0) then begin       AddTextToArea(nextline,acarriage);      InsertAreaBeforeArea(acarriage,adata);      for (i=0;i<arlen;i=i+1) begin        if (Asc(GetStringFromArea(adata,i,1))==10) then begin          i = i + 1;          switch (GetStringFromArea(adata,i,2)) begin            case "TS":              i = i + 2;              headerf = true;              storeID = GetStringFromArea(adata,i,4);              i = i + 4;              storeID2 = GetStringFromArea(adata,i,4);              i = i + 4;              transpBill = GetStringFromArea(adata,i,9);              i = i + 9;              transpBillDate = GetStringFromArea(adata,i,8);              i = i + 8;              //skip row number              i = i + 5;              deliverer = GetStringFromArea(adata,i,70);              i = i + 70;              recipient = GetStringFromArea(adata,i,70);              i = i + 70;              importer = GetStringFromArea(adata,i,70);              i = i + 70;              oviVATNum = GetStringFromArea(adata,i,11);              i = i + 11;              goodsCollAddr = GetStringFromArea(adata,i,95);              i = i + 95;            case "DT":              if (headerf) then begin                RECORDNEW(CoinPackListr);                CoinPackListr.RecordType = "DT";                CoinPackListr.ImpDate = CurrentDate;                CoinPackListr.ImpTime = CurrentTime;                CoinPackListr.SerNr = NextSerNr("CoinPackListVc",CoinPackListr.ImpDate,-1,false,"");                CoinPackListr.FileName = filename;                SetHeaderCoinPackList(CoinPackListr,storeID,storeID2,transpBill,transpBillDate,deliverer,recipient,importer,oviVATNum,goodsCollAddr);                i = i + 2 + 4 + 4 + 9 + 8;                //skip row number                i = i + 5;                CoinPackListr.PalletCode = GetStringFromArea(adata,i,13);                i = i + 13;                CoinPackListr.DistribNum = GetStringFromArea(adata,i,9);                i = i + 9;                CoinPackListr.PackGroupNum = GetStringFromArea(adata,i,9);                i = i + 9;                CoinPackListr.NumOfPackages = GetStringFromArea(adata,i,9);                i = i + 9;                CoinPackListr.SKUNumber = GetStringFromArea(adata,i,9);                i = i + 9;                CoinPackListr.ItemDescription = GetStringFromArea(adata,i,51);                i = i + 51;                CoinPackListr.ItemComposition = GetStringFromArea(adata,i,78);                i = i + 78;                CoinPackListr.GenderDescription = GetStringFromArea(adata,i,10);                i = i + 10;                CoinPackListr.Fabric = GetStringFromArea(adata,i,10);                i = i + 10;                CoinPackListr.CountryOfOrigin = GetStringFromArea(adata,i,3);                i = i + 3;                CoinPackListr.CustomsCode = GetStringFromArea(adata,i,9);                i = i + 9;                CoinPackListr.Quantity = GetStringFromArea(adata,i,9);                i = i + 9;                CoinPackListr.GlobGrossWeight = GetStringFromArea(adata,i,11);                i = i + 11;                CoinPackListr.GlobNetWeight = GetStringFromArea(adata,i,11);                i = i + 11;                CoinPackListr.UnitCostPrice = GetStringFromArea(adata,i,11);                i = i + 11;                CoinPackListr.ExtraUE = GetStringFromArea(adata,i,1);                i = i + 1;                CoinPackListr.ItalCustCode = GetStringFromArea(adata,i,9);                i = i + 9;                CoinPackListr.UnitGrossWeight = GetStringFromArea(adata,i,11);                i = i + 11;                CoinPackListr.CostCurCode = GetStringFromArea(adata,i,3);                i = i + 3;                CoinPackListr.InvoiceNum = GetStringFromArea(adata,i,10);                i = i + 10;                CoinPackListr.InvoiceDate = GetStringFromArea(adata,i,8);                i = i + 8;                CoinPackListr.EAN = GetStringFromArea(adata,i,13);                i = i + 13;                if (Asc(GetStringFromArea(adata,i,1))!=10) then begin //may repeat up to 12 times?                  CoinPackListr.OtherPalletCodes = GetStringFromArea(adata,i,13);                  i = i + 13;                end;                if (CoinPackListr.SerNr>0) then begin                  if (RECORDSTORE(CoinPackListr,false)==false) then begin                    LogText(0,"Packlist " & FileName & " was no saved");                   end;                end else begin                  LogText(0,"Packlist " & FileName & " got no SerNr");                  end;              end;            case "PK":              RECORDNEW(CoinPackListr);              CoinPackListr.RecordType = "PK";              CoinPackListr.ImpDate = CurrentDate;              CoinPackListr.ImpTime = CurrentTime;              CoinPackListr.SerNr = NextSerNr("CoinPackListVc",CoinPackListr.ImpDate,-1,false,"");              CoinPackListr.FileName = filename;              SetHeaderCoinPackList(CoinPackListr,storeID,storeID2,transpBill,transpBillDate,deliverer,recipient,importer,oviVATNum,goodsCollAddr);              i = i + 2 + 4 + 4 + 9 + 8;              //skip row numb              i = i + 5;              CoinPackListr.PackGroupNum = GetStringFromArea(adata,i,9);              i = i + 9;              CoinPackListr.EAN = GetStringFromArea(adata,i,13);              i = i + 13;              if (CoinPackListr.SerNr>0) then begin                if (RECORDSTORE(CoinPackListr,false)==false) then begin                  LogText(0,"Packlist " & FileName & " was no saved");                 end;              end else begin                LogText(0,"Packlist " & FileName & " got no SerNr");                end;          end;          end;      end;    end;    //Delete_File(filepath);    LGruppoCoinParsePackList:;      return;end; //Edit***************************Sasha2,16:31 01.07.2016 }global //Edit***************************Sasha2,16:31 01.07.2016 {updating procedure GruppoCoinSearchInputFiles(record RcVc RepSpec) begin  string 255 path,filename;  Integer i,numoffiles;        path = "in\\";    numoffiles = CountFilesInDir(path);    for (i=0;i<numoffiles;i=i+1) begin      filename = GetFileNameInDir(path,i);      if (left(filename,3)=="DDT") then begin         GruppoCoinParsePackList(path,filename);      end;    end;    return;end; //Edit***************************Sasha2,16:31 01.07.2016 }