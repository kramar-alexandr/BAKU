ateStr & storeID & itemcode;					qty = AbsoluteVal(IVrw.Quant); //cut decimals;					quant = "+" & Right("000000" & qty,6);						price = AbsoluteVal(IVrw.Price * IVrw.Quant * 100);					pricevalue = 	"+" & Right("0000000000" & price,10);					discount = price - AbsoluteVal(IVrw.Sum)*100;					discountvalue = "+" & Right("00000000" & discount,8);					discountCode = "  "; //two spaces					if (nonblank(IVrw.vRebate)) then begin discountCode = "93"; end;					transNr = IVr.SerNr;					rowdata = rowdata & quant & Left(IVr.CurncyCode,3) & pricevalue & discountCode & discountvalue;					rowdata = rowdata & operatorID & terminalID & Right(transNr,4) & typeOfRegistration;					AddTextToArea(rowdata & nextline, ames);					count = count + 1;				end;				end;  			end;	end;		//Trailer record	countStr = Right("0000000" & count,7);	AddTextToArea("**FINE**" & vendtran & transdateStr & storeID & countStr, ames);	WriteAreaToFile(ames,filename,0);			//createfile("sss.txt");	//openexportfile("sss.txt",false);		//startformat(15);	//	outstring(0,0,vendtran & transdateStr,false);	//EndFormat;	//CloseFile;  return;end;*/global procedure GruppoCoinManualMn(record RcVc RepSpec) //Edit***************************Sasha2,12:11 29.06.2016beginarea importoptar;		addtexttoarea("TEST",importoptar);  /*if (RepSpec.flags[1]==1) then begin    GruppoCoinSalesMn(RepSpec);  end;  millisleep(200);  if (RepSpec.flags[2]==1) then begin    StocKCountGCMn(RepSpec);  end;*/    //CreateFile("out1/HansaTest.txt");  WriteAreaToFile(importoptar,"/Volumes/coin/out/HansaTest.txt",0);	//CloseFile;  return;end;