						end;
						if(fileexists("webcust/Carpets/" & imname & ".png"))then begin
							filename = "Carpets/" & imname & ".png";
						end;
						weboutstring("<img src=\"" & filename & "\" height=\"400\"/></div></td>");
						
		otherwise
						WebSetContentType("image/jpeg");
						WebOutAttachment(stringtoint(imname));
  end;
  
  return;
end;

global
