begin
record IVVc IVr;
row IVVc IVrw;
record INVc INr;
record Attach2Vc Attachr;
string 255 res;
integer wn,rwcnt;
record RLinkVc RLr;

	res = "";
	

	INr.Code = txt;
	if(readfirstmain(INr,1,true))then begin
		ReadRecordLink(INr,1,Attachr,RLr);
		res = Attachr.SerNr;
	end;
	
	GetINImageAttach = res;
return;
end;
