
function string 200 NormalizeFileName(string fname)
begin
	string 255 res,newname;
	integer length,i;
	
	length = len(fname);
	For(i=0;i<length;i=i+1) begin
	  if(mid(fname,i,1)==" ")then begin
	  	newname = newname & "\\ ";
	  end else begin
	  	newname = newname & mid(fname,i,1);
	  end;
	end; 
	res = newname;
	NormalizeFileName = res;
return;
end;

